<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rox2 Earbuds"
            android:textColor="#FF091931"
            android:textSize="32sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="360dp"
            android:layout_height="307dp"
            android:background="@drawable/image_1"
            android:layout_marginTop="32dp"
            />
        <TextView
            android:id="@+id/tv_connect_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can not found device"
            android:textColor="#FF091931"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/retry_connect"
            android:gravity="center"
            android:drawableRight="@drawable/icon_nav_back_48px"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="go to connect"
            android:textColor="@color/text_color_blue"
            android:textAllCaps="false"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:text="Heart Rate Detection"
            android:layout_gravity="start"
            android:textColor="#FF091931"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >
            <ImageView
                android:id="@+id/launch_to_test_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_hr_1"
                />
            <TextView
                android:id="@+id/launch_heart_rate_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="62dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Your heart rate ranged from 56 to 120 today."
                android:textColor="#B3091931"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_launch_heart_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="57.5dp"
                android:text="59"
                android:textColor="#FF091931"
                android:textSize="48sp"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/launch_heart_rate_text"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/launch_heart_rate_uint"
                android:layout_width="89dp"
                android:layout_height="19dp"
                android:text="BPM"
                android:textColor="#99091931"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30.5dp"
                android:layout_below="@+id/launch_heart_rate_text"
                android:layout_toEndOf="@+id/tv_launch_heart_rate_value"
                />
            <TextView
                android:id="@+id/tv_launch_heart_time"
                android:layout_width="296dp"
                android:layout_height="14.5dp"
                android:text="Latest: 2:43 PM 06/12"
                android:textColor="#99091931"
                android:textSize="12sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6.5dp"
                android:layout_below="@+id/tv_launch_heart_rate_value"
                />
        </RelativeLayout>
    </LinearLayout>


</ScrollView>