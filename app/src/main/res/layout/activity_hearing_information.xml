<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:id="@+id/tv_hearing_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_nav_back"
            android:layout_marginLeft="9dp"
            android:clickable="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hearing Test"
            android:textColor="#FF091931"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter gender and age"
        android:textColor="#FF091931"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Different gender and age will affect the test results, please enter them first."
        android:textColor="#99091931"
        android:textSize="16sp"
        android:layout_margin="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My gender is:"
        android:textColor="#FF091931"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_male_white"
            android:text="Male"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/gender_bg_blue"
            />
        <TextView
            android:id="@+id/tv_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:drawableTop="@drawable/icon_female_white"
            android:text="Female"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#091931"
            android:background="@drawable/gender_bg_white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Born in:"
        android:textColor="#FF091931"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        >
        <com.goertek.rox2.ui.main.utils.CustomHorizontalNumber
            android:id="@+id/number_picker"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:longClickable="true"
            />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btn_next_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:background="@drawable/michal_bg_btn_next_blue"
        android:layout_margin="40dp"
        android:layout_gravity="bottom"
        />
</LinearLayout>