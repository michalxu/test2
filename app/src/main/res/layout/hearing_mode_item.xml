<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/heaing_item_layout"
    >
    <TextView
        android:id="@+id/heaing_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amay.Li"
        android:textColor="#FF091931"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="24dp"
        />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/heaing_item_select"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:background="@drawable/michal_bg_blue"
        android:gravity="center"
        android:layout_margin="6dp"
        android:clickable="true"
        android:focusable="true"
        />
    <TextView
        android:id="@+id/heaing_item_edit"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="24dp"
        android:text="Edit"
        android:textColor="#FF091931"
        android:textSize="12sp"
        android:background="@drawable/bg_white_with_black_boundary"
        />
</LinearLayout>