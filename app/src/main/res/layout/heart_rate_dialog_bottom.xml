<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_dialog_height"
    android:background="@drawable/michal_bg_white">
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="64dp"
        android:layout_height="4dp"
        android:background="#1A000000"
        android:layout_marginTop="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="52.5dp"
        >
        <TextView
            android:layout_width="154dp"
            android:layout_height="19dp"
            android:text="Heart Rate Detection"
            android:textColor="#FF091931"
            android:textSize="16sp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center_vertical"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/heart_rate_detect_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_on"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#1A000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20.5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High precision measurement"
                android:textColor="#FF091931"
                android:layout_marginLeft="24dp"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noticeï¼šHigh precision affects power loss"
                android:textColor="#80000000"
                android:textSize="10sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/high_precision_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_on"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20.5dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#1A000000"
        />
</LinearLayout>