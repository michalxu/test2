<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/tv_hearing_prepared_test_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@drawable/icon_nav_back"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hearing Test"
            android:textColor="#FF091931"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wear properly"
        android:textColor="#FF091931"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two ears need to be tested separately, please wear properly."
        android:textColor="#99091931"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/img_ear"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set volume to 50%"
        android:drawablePadding="8.5dp"
        android:textColor="#FF2378F1"
        android:textSize="20sp"
        android:drawableRight="@drawable/icon_done"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_weared_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earbuds weared"
        android:textColor="#2378F1"
        android:textSize="20sp"
        android:drawablePadding="8.5dp"
        android:drawableRight="@drawable/icon_done"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btn_next_prepared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/michal_bg_btn_next_blue"
        android:layout_margin="40dp"
        android:layout_gravity="bottom"
        />
</LinearLayout>